<body class="stretched">

	<!-- Document Wrapper
	============================================= -->
	<div id="wrapper" class="clearfix">

		
		<div id="header"></div>

		<!-- Page Title
		============================================= -->
		<section id="page-title">
			<div class="container clearfix">
				<h1>Registration</h1>
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Home</a></li>					
					<li class="breadcrumb-item active" aria-current="page">Registration</li>
				</ol>
			</div>
		</section>

		<!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">
				<div class="container clearfix">

					<div class="row">			

						<div class="col-md-12">
							<h3>Be a part of Youth Congress Nepal. Register Now.</h3>

							<p></p>

							<form id="register-form" name="register-form" class="row" action="/register" method="post">
								<div class="col-12 form-group"> 
									<label for="first_name">First Name:</label>
									<input type="text" id="firstname" name="firstname" class="form-control" required>
								</div>
							
								<div class="col-12 form-group">
									<label for="last_name">Last Name:</label>
									<input type="text" id="lastname" name="lastname" class="form-control" required>
								</div>						
								
								<div class="col-12 form-group">
									<label for="last_name">Username:</label>
									<input type="text" id="username" name="username" class="form-control" required>
								</div>

								<div class="col-12 form-group">
									<label for="last_name">Password:</label>
									<input type="password" id="password" name="password" class="form-control" required>
								</div>

							
								<div class="col-12 form-group">
									<label for="email_id">Email Address:</label>
									<input type="email" id="email" name="email" class="form-control" required>
								</div>
								
							
								<div class="w-100"></div>
							
								<div class="col-12 form-group">
									<label for="mobile_number">Mobile Number:</label>
									<input type="text" id="mobile" name="mobile" class="form-control" required 
										pattern="\d{10}" title="Please enter a valid 10-digit mobile number.">
								</div>

								<div class="col-8 col-lg-auto">
									<button type="submit" class="button button-reveal button-large button-circle text-right">
										<i class="icon-angle-right"></i>
										<span>Submit your registration form</span>
									</button>

									<p><%- status %></p>
								</div>							
							</form>					

						</div>

					</div>

				</div>
			</div>
		</section>

		<div id="footer"></div>

	</div><!-- #wrapper end -->

	<!-- Go To Top
	============================================= -->
	<div id="gotoTop" class="icon-angle-up"></div>

